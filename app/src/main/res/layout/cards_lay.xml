<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/BackgroundColour"

    >


    <LinearLayout
        android:id="@+id/Rel_layout_1"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:weightSum="6"
        android:background="@drawable/layout_design">

        <LinearLayout
            android:id="@+id/L_layout1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_weight="2">
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:background="@drawable/border2">
                <TextView
                    android:id="@+id/money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/moneyy"
                    android:layout_marginLeft="7dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1500"
                    android:textSize="11dp"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
                    android:layout_marginLeft="8dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginLeft="160dp"
                android:background="@drawable/border2">
                <TextView
                    android:id="@+id/time"
                    android:layout_width="12dp"
                    android:layout_height="14dp"
                    android:background="@drawable/timeee"
                    android:layout_marginLeft="6dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 hrs ago"
                    android:textSize="9dp"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/textColor"
            >

        </View>

        <LinearLayout
            android:id="@+id/L_layout2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:paddingTop="24dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/location"
                android:layout_marginLeft="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:text="Dallas, TX"
                android:layout_marginLeft="5dp"/>


            <TextView
                android:layout_width="25dp"
                android:layout_height="3dp"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/line"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textColor="@color/textColor"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:text="1500 KM"
                android:textSize="14dp"
                android:layout_marginLeft="3dp"/>
            <TextView
                android:layout_width="25dp"
                android:layout_height="3dp"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/line"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textColor="@color/textColor"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/destination1"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Houstan, DX"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textColor"
            ></View>
        <LinearLayout
            android:id="@+id/L_layout3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:paddingTop="10dp"
            >

            <TextView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:background="@drawable/machineryy"
                android:layout_marginLeft="12dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/textColor"
                android:textSize="14dp"
                android:text="Heavy Machinery"
                />

            <TextView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/weight"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="65dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/textColor"
                android:textSize="14dp"
                android:text="20 MT"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textColor"
            ></View>
        <LinearLayout
            android:id="@+id/L_layout4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/load11"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/textColor"
                android:textSize="14dp"
                android:text="40 FT Container"
                />

            <TextView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/load11"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="78dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/textColor"
                android:textSize="14dp"
                android:text="Full Load"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textColor"
            ></View>
        <LinearLayout
            android:id="@+id/L_layout5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingTop="9dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/calender"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/textColor"
                android:textSize="14dp"
                android:text="40 FT Container"
                />

            <TextView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/timeee"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="78dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/textColor"
                android:textSize="14dp"
                android:text="Full Load"
                />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>